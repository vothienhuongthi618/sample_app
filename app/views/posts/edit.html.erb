<h1>Edit post</h1>
<%= form_for(@post) do |f| %>
  <%= render 'shared/post_form', f: f %>
  <%= f.submit "Update", class: "btn btn-large btn-primary" %>
<% end %>
<%= link_to 'back', root_path %> |
<%= link_to "delete", @post, method: :delete, 
										 data: { confirm: "You sure?" },
										 title: @post.title %>
