<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "sample app", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>

          <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Posts <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All", posts_path %></li>
                <li><%= link_to "Published", posts_path(:state => {:state => 2}) %></li>
                <li><%= link_to "Completed", posts_path(:state => {:state => 1}) %></li>
                <li><%= link_to "Drafts", posts_path(:state => {:state => 0}) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Tossed", posts_path(:state => {:state => 3}) %>
                </li>
              </ul>
            </li>

            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", posts_path(:state => {:state => 2}) %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>

          <% else %>

            <li><%= link_to "Sign in", signin_path %></li>

          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>